<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css">
    <link rel="stylesheet" href="main.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <title>Oneriler</title>
</head>

<body>

    <div id="ana">


        <nav class="navbar is-fixed-top" role="navigation" aria-label="dropdown navigation">
            <span style="font-size:25px;cursor:pointer;float:left" onclick="openNav()">&#9776;</span>
            <a class="subtitle is-4">MpChat</a>
        </nav>

        <div class="columns level-left">

            <div id="mySidenav" class="sidenav">

                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <a class="subtitle is-3">Oda Seçimi</a>
                <a href="/genel" id="genel">Genel</a>
                <a href="/kuzey" id="kuzey">Kuzey</a>
                <a href="/guney" id="guney">Güney</a>
                <a href="/halic" id="halic">Haliç</a>
                <a style="float: right;" class="subtitle is-5">Aktif : <span id="onlineUser"></span></a><br>
                <a href="/hesap">Hesap Bilgilerim</a>
                <% kullanici.forEach(function(user){ %>
                <a name="/hesap/<%= user.Id %>" onclick="onay(this.name)">Hesabımı Sil</a>
                <% }); %>
                <a href="/AdminOneriler">Öneriler</a>
                <a href="/" id="Cikis">Çıkış</a>

            </div>

        </div>


        <div class="icerik" id="icerik">
            <div class="container box" style="padding:10px; margin-top:50px; padding: 3%;">
                <h3 class="subtitle is-3">Öneri ve Görüşler</h3>
                <div id="liste">
                    <% Oneriler.forEach(function(Oneriler){ %>
                    <div class="list is-hoverable" ,>

                        <a class="list-item">

                            <label class="label">Kullanıcı: </label>
                            <input class="input" id="username" name="kullanici" type="text"
                                value="  <%= Oneriler.KullaniciAd %>">
                            <label class="label">Konu:</label>
                            <input class="input" id="username" name="konu" type="text" value=" <%= Oneriler.konu  %>">
                            <form action="/AdminOneriler" method="POST">
                                <input class="input" id="username" name="no" type="text" value="<%= Oneriler.Id  %>" style="display:none">
                     

                                <button type="submit" class="button is-link" style="margin:15px;"
                                    onclick="Goster()">Göster</button>

                            </form>
             

                        </a>

                    </div>
                    <% }); %>
                </div>
            </div>


        </div>

    </div>


    </div>

    <div class="modal" id="modalim">
        <div class="modal-background"></div>
        <div class="uyari">
            <div class="card">
                <header class="card-header ">
                    <p class="card-header-title is-centered is-size-4	">
                        Onay
                    </p>
                    <a href="#" class="card-header-icon" aria-label="more options">
                        <span class="icon">
                        </span>
                    </a>
                </header>
                <div class="card-content">
                    <div class="content">
                        <p class="title is-5">Geri dönüşü olmamak üzere hesabınızı silme işlemini onaylıyor musunuz ?
                        </p>
                        <br>
                    </div>
                </div>
                <footer class="card-footer">
                    <a id="onayButton" class="card-footer-item">Onayla</a>

                    <a id="vazgec" class="card-footer-item">Vazgeç</a>
                </footer>
            </div>
        </div>
        <button class="modal-close is-large" aria-label="close"></button>
    </div>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.slim.js"></script>
    <script src="oneri.js"></script>
    <script src="dbOperations.js"></script>
    <script>
        localStorage.setItem('Ad', document.getElementById('nick').innerHTML)
       
    </script>
</body>

</html>